/*================ Color Variables ================*/

// Text colors
$color-text-shadow: rgba(0,0,0,0.4);
$color-small-button-text-border: #3D4246;
$color-text-field: {{ settings.color_text_field }};
$color-text-field-text: {{ settings.color_text_field_text }};
$color-navigation-text: {{ settings.color_body_text }};

// Button Primary colors
$color-btn-primary-text: {{ settings.color_button_text }};
$color-btn-primary-border: {{ settings.color_button_border }};
$color-btn-primary-bg: {{ settings.color_button_background }};
$color-btn-primary-focus: darken({{ settings.color_button_background }}, 10%);

// Button secondary colors
$color-btn-secondary-text: {{ settings.color_button_secondary_text }};
$color-btn-secondary-border: {{ settings.color_button_secondary_border }};
$color-btn-secondary-bg: {{ settings.color_button_secondary_background }};
$color-btn-secondary-focus: darken({{ settings.color_button_secondary_background }}, 10%);

// Button checkout colors
$color-btn-checkout-text: {{ settings.color_button_checkout_text }};
$color-btn-checkout-border: {{ settings.color_button_checkout_border }};
$color-btn-checkout-bg: {{ settings.color_button_checkout_background }};
$color-btn-checkout-focus: darken({{ settings.color_button_checkout_background }}, 10%);

// Font
$font-stack-header: "Archivo Narrow";
$font-stack-body: "Jost*", Helvetica;
$font-size-base: {{ settings.type_base_size }}px;
$color-body: {{ settings.color_body_bg }};
$color-body-text: {{ settings.color_body_text }};
$color-border: #ddd;

/*======================================
=               Accordion              =
======================================*/

.accordion {
  .panel {
    &.active {
      .header:after {
        background-image: url({{ 'icon-plus.svg' | asset_url }});
      }
    }
  }
  .header {
    position: relative;
    text-transform: uppercase;
    padding: 15px 0;
    display: block;
    font-size: 12px;
    line-height: 16px;
    font-weight: 600;
    cursor: pointer;
    border-bottom: 1px solid $color-border;
    letter-spacing: 0.364px;
    &:after {
      content: '';
      position: absolute;
      top: 50%;
      right: 0;
      width: 15px;
      height: 15px;
      transform: translateY(-50%);
      display: block;
      background-image: url({{ 'icon-minus.svg' | asset_url }});
      background-size: cover;
    }
  }
  .body {
    display: none;
    padding: 15px 0;
    font-size: 11px;
    line-height: 21px;
    letter-spacing: 0.364px;
  }

  @media screen and (max-width: 990px) {
    .header {
      font-size: 13px;
      line-height: 32px;
      padding: 20px 0;
    }
    .body {
      font-size: 13px;
      line-height: 23px;
      padding: 20px 0;
    }
  }
}

