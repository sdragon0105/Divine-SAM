{% if section.settings.enable_layout %}
    {% if section.settings.border-top %}
        {% assign border_top = 'halo-section-border-top' %}
    {% endif %}

    {% if section.settings.border-bottom %}
        {% assign border_bottom = 'halo-section-border-bottom' %}
    {% endif %}

    {% assign top = top | default: section.settings.top %}
    {% assign bottom = bottom | default: section.settings.bottom %}

    {% assign column = column | default: section.settings.column %}
    {% assign arrows = arrows | default: section.settings.carousel-arrows %}
    {% assign dots = dots | default: section.settings.carousel-dots %}

    <div class=" test halo-section padding-top-{{ top }} padding-bottom-{{ bottom }} {{ border_top }} {{ border_bottom }}" data-section-id="{{ section.id }}" data-section-type="collection-quotes">
        <div class="container">
            {% if section.settings.title != blank %}
                <div class="section-header text-center">
                    <h2 class="title">{{ section.settings.title }}</h2>
                    {% if section.settings.description != blank %}
                        <p>{{ section.settings.description }}</p>
                    {% endif %}
                </div>
            {% endif %}
            {% if section.blocks.size > 0 %}
                <div class="halo-row column-{{ column }}"
                    data-slick='{
                        "rows": 0,
                        "rtl": false,
                        "dots": true,
                        "arrows": false,
                        "infinite": false,
                        "adaptiveHeight": true,
                        "mobileFirst": true,
                        "slidesToShow": 1,
                        "slidesToScroll": 1,
                        "prevArrow": "<div class=&apos;slick-prev slick-arrow slick-arrow--large&apos;><svg class=&apos;icon&apos;><use xlink:href=&apos;#icon-chevron-left&apos; /></svg></div>", 
                        "nextArrow": "<div class=&apos;slick-next slick-arrow slick-arrow--large&apos;><svg class=&apos;icon&apos;><use xlink:href=&apos;#icon-chevron-right&apos; /></svg></div>",
                        "responsive": [
                            {
                                "breakpoint": 551,
                                "settings": {
                                    "slidesToShow": 1
                                }
                            },
                            {
                                "breakpoint": 991,
                                "settings": {
                                    "slidesToShow": 1
                                }
                            },
                            {
                                "breakpoint": 1025,
                                "settings": {
                                    "dots": {{ dots }},
                                    "arrows": {{ arrows }}
                                }
                            },
                            {
                                "breakpoint": 1281,
                                "settings": {
                                    "dots": {{ dots }},
                                    "arrows": {{ arrows }},
                                    "slidesToShow": {{ column }}
                                }
                            }
                        ]
                    }'>
                    {% for block in section.blocks %}
                        <div class="halo-row__item">
                            <blockquote class="quotes-slider__text text-center">
                                {% if block.settings.quote != blank %}
                                    <div class="quote-content">{{ block.settings.quote }}</div>
                                {% endif %}
                                <div class="quote-author">
                                    {% if block.settings.image %}    
                                        <img srcset="{{ block.settings.image | img_url: '50x50' }}" alt="">
                                    {% endif %}
                                    {% if block.settings.author != blank %}
                                        <cite>{{ block.settings.author }}</cite>
                                    {% endif %}
                                </div>
                            </blockquote>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
{% endif %}


{% schema %}
{
    "name": "Collection Quotes",
    "max_blocks": 9,
    "settings": [
        {
            "type": "header",
            "content": "Section Layout"
        },
        {
            "type": "checkbox",
            "id": "enable_layout",
            "label": "Enable Layout",
            "default": false
        },
        {
            "type": "checkbox",
            "id": "border-top",
            "label": "show border top",
            "default": false
        },
        {
            "type": "checkbox",
            "id": "border-bottom",
            "label": "show border bottom",
            "default": false
        },
        {
            "type": "range",
            "id": "top",
            "label": "Spacing Top",
            "default": 30,
            "min": 0,
            "max": 100,
            "step": 10,
            "unit": "px"
        },
        {
            "type": "range",
            "id": "bottom",
            "label": "Spacing bottom",
            "default": 30,
            "min": 0,
            "max": 100,
            "step": 10,
            "unit": "px"
        },
        {
            "type": "header",
            "content": "Heading Section"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Testimonials"
        },
        {
            "type": "textarea",
            "id": "description",
            "label": "Description"
        },
        {
            "type": "header",
            "content": "Layout"
        },
        {
            "type": "range",
            "id": "column",
            "label": "Column",
            "min": 1,
            "max": 5,
            "step": 1,
            "default": 3
        },
        {
            "type": "checkbox",
            "id": "carousel-arrows",
            "label": "show arrows (Layout carousel)",
            "default": true
        },
        {
            "type": "checkbox",
            "id": "carousel-dots",
            "label": "show dots (Layout carousel)",
            "default": true
        }
    ],
    "blocks": [
        {
            "type": "quote",
            "name": "Testimonial",
            "settings": [
                {
                    "type": "richtext",
                    "id": "quote",
                    "label": "Text",
                    "default": "<p>Add customer reviews and testimonials to showcase your storeâ€™s happy customers.</p>"
                },
                {
                    "type": "text",
                    "id": "author",
                    "label": "Author",
                    "default": "Author's name"
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                }
            ]
        }
    ]
}
{% endschema %}
