		<img src="{{block.settings.image |img_url:''}}">
    </div>
	<div class="custom-table-content-test">    
		<span>{{block.settings.title}}</span>
  		<p>{{block.settings.content}}</p>
    </div>
  </div>
  
  {% when 'mobile_table' %}
  
  <div class="mobile_table">
  <div class="slider_table">
    <div class="custom-table-content">
      <div class="col_row">
        <div class="col_cum">
          <img src="{{block.settings.mob_image_1 |img_url:'master'}}">
          <h3>{{ block.settings.pro_name1 }}</h3>
        </div>
        <div class="col_cum">
          <img src="{{block.settings.mob_image_2 |img_url:'master'}}">
          <h3>{{ block.settings.pro_name2 }}</h3>
        </div>
      </div>
      <div class="col_row">
        <div class="col_cum_100">
          <h4>{{block.settings.pro_size }}</h4>
        </div>
      </div>
      <div class="col_row">
        <div class="col_cum">
          <p>{{block.settings.pro_size_1 }}</p>
        </div>
        <div class="col_cum">
