<div class-="desktop_table">

<div id="{{section.id}}" class="shopify-section">
  <h1 data-aos="fade-up" data-aos-duration="1000">{{section.settings.heading}}</h1>
  {% for block in section.blocks %}
  
  {% case block.type %}
  
  {% when 'first-section' %}
  
  <div class="custom-table-content" data-aos="fade-up" data-aos-duration="1000">
