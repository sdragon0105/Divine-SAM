<div id="{{section.id}}" class="shopify-section">
<div class="page-width">
  <div class="how-custom-content aos-init aos-animate" data-aos="fade-up" data-aos-duration="1000">
{% if section.settings.title != blank %}
{{section.settings.title}}
{%endif %}
{% if section.settings.btn_link != blank %}
<a href="{{section.settings.btn_link}}">{{section.settings.btn}}</a>
{%endif %}
  </div></div>
  <img src="{{section.settings.image | img_url:'' }}">
</div>
{% schema %}
  {
    "name": "upper text with image",
    "settings": [
{
"type":"text",
"id":"title",
"label":"Heading"
},
{
"type":"text",
"id":"btn",
"label":"Button"
},
{
"type":"url",
"id":"btn_link",
"label":"Button link"
},
{
"type":"image_picker",
"id":"image",
"label":"Image"
}
]

 
  }
{% endschema %}

