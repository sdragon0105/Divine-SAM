<div class="container">
<div class="feature_sec padding-top-50 padding-bottom-50">
  <div class="section-header text-center">
    {% if section.settings.beauty_image != blank %}
      	<div class="beauty_img_div desktop_hide padding-bottom-50">
          <img class="beauty_img" src="{{ section.settings.beauty_image | img_url: 'master' }}" alt="{{ section.settings.image }}">
      	</div>
    {% endif %}
    <h2 class="title section_tlt">{{ section.settings.title }}</h2>
  </div>
    
  <div class="main_feature123 grid main_container">
    {% for block in section.blocks %}
      <div class="image_blog grid__item medium-up--one-quarter small--one-half">
        {% if block.settings.title != blank %}
          <h4>{{ block.settings.title }}</h4>
        {% endif %}
        {% if block.settings.text != blank %}
          <p>{{ block.settings.text }}</p>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>
</div>
<style>
  .feature_sec {background-color: #eef1f0;}
</style>
