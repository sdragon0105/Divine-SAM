<div class="container">
<div class="feature_sec padding-bottom-50">
  <div class="section-header text-center">
    <h2 class="title section_tlt">{{ section.settings.title }}</h2>
  </div>
    
  <div class="main_feature">
    {% for block in section.blocks %}
      <div class="feature_blog">
        {% if block.settings.image != blank %}
          <img class="feature_img" src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image }}">
        {% endif %}
        {% if block.settings.title != blank %}
          <h4>{{ block.settings.title }}</h4>
        {% endif %}
        {% if block.settings.text != blank %}
          <p>{{ block.settings.text }}</p>
        {% endif %}
      </div>
    {% endfor %}
  </div>
  <div class="info_tt">{{ section.settings.text }}</div>
</div>
</div>
<style>
  .feature_sec {background-color: #eef1f0;}
</style>
{% schema %}
  {
    "name": "Main Features",
    "settings": [
					{
                      "type": "text",
                      "id": "title",
                      "label": "Title"
                    },
                    {
                      "type": "text",
                      "id": "text",
                      "label": "Text"
                    },
					{
                       "type": "header",
                       "content": "For Mobile Section"
                    },
					{
						"type": "image_picker",
						"id": "beauty_image",
						"label": "Image"
					}
				],
				"blocks": [
							{
								"type": "image",
								"name": "feature",
								"settings": [
												{
													"type": "image_picker",
													"id": "image",
													"label": "Image"
												},
												{
													"type": "text",
													"id": "title",
													"label": "Title"
												},
												{
													"type": "text",
													"id": "text",
													"label": "Text"
												}
											]
							}
						],
						"presets": [
										{
											"name": "Main Features"
										}	
								]
  }
{% endschema %}

