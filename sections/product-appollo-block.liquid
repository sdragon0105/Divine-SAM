<div id="{{section.id}}" class="shopify-section">
  <div class="page-width">
  <h1>{{section.settings.title}}</h1>
    <span>{{section.settings.title-second}}</span>
<div class="custom-apollo-block-section">
  {% for block in section.blocks %}
  <div class="custom-apollo-block-content">
<img src="{{block.settings.image |img_url:''}}">
<span>{{block.settings.title-step}}</span>
  <p>{{block.settings.content}}</p>
  </div>{%endfor%}
    </div>
     <h1>{{section.settings.title-sub}}</h1> 
  </div>
</div>

{% schema %}
  {
    "name": "product blocks",
    "settings": [
{
"type":"text",
"id":"title",
"label":"Heading"
},
{
"type":"html",
"id":"title-second",
"label":"content"
},
{
"type":"text",
"id":"title-sub",
"label":"bottom title"
}
],
"blocks": [
{
"type": "first-section",
"name": "steps",
"settings": [
{
"type":"image_picker",
"id":"image",
"label":"Image"
},
{
"id": "title-step",
"type": "text",
"label": "step"
},
{
"id": "content",
"type": "text",
"label": "content"
}
]
}
]
  
}
  
{% endschema %}

