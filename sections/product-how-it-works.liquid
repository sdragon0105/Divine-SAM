{% if section.settings.enable_layout %}
  {% if section.settings.border-top %}
    {% assign border_top = 'halo-section-border-top' %}
  {% endif %}
  
  {% if section.settings.border-bottom %}
    {% assign border_bottom = 'halo-section-border-bottom' %}
  {% endif %}

  {% assign top = top | default: section.settings.top %}
  {% assign bottom = bottom | default: section.settings.bottom %}

  <div class="product-how-it-works halo-section padding-top-{{ top }} padding-bottom-{{ bottom }} {{ border_top }} {{ border_bottom }}" {% if section.settings.background-color != blank %}style="background-color: {{ section.settings.background-color }}"{% endif %}>
    {% if section.settings.title != blank %}
      <div class="section-header text-center" data-aos="fade-up" data-aos-duration="1000">
        <h2 class="title">{{ section.settings.title }}</h2>
        {% if section.settings.description != blank %}
          <p>{{ section.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}
    <div class="container">
      <div class="items text-center">
        {% for block in section.blocks %}
          <div class="item"  data-aos="fade-up" data-aos-duration="1000">
            {% if block.settings.image != blank %}
              <img class="lazyload"
                data-src="{{ block.settings.image | img_url: '100' }}"
                alt="" data-image>
            {% endif %}
            <span class="number hide"></span>
            <h2 class="title">{{ block.settings.title }}</h2>
            {% if block.settings.description != blank %}
              <p>{{ block.settings.description }}</p>
            {% endif %}
            {% if block.settings.cta_label != blank and block.settings.cta_link != blank %}
              <a href="{{ block.settings.cta_link }}" class="cta-link">{{ block.settings.cta_label }}</a>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "How it works",
  "max_blocks": 3,
  "settings": [
    {
      "type": "header",
      "content": "Section Layout"
    },
    {
      "type": "color",
      "id": "background-color",
      "label": "Background color"
    },
    {
      "type": "checkbox",
      "id": "enable_layout",
      "label": "Enable Layout",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "border-top",
      "label": "show border top",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "border-bottom",
      "label": "show border bottom",
      "default": false
    },
    {
      "type": "range",
      "id": "top",
      "label": "Spacing Top",
      "default": 60,
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "bottom",
      "label": "Spacing bottom",
      "default": 60,
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Heading Section"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "How it works"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Description"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "cta_label",
          "label": "CTA Label"
        },
        {
          "type": "url",
          "id": "cta_link",
          "label": "CTA Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "How it works",
      "blocks": [
        {
          "type": "item"
        },
        {
          "type": "item"
        },
        {
          "type": "item"
        }
      ]
    }
  ]
}
{% endschema %}