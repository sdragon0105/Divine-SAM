{% if section.settings.enable_layout %}
  {% if section.settings.border-top %}
    {% assign border_top = 'halo-section-border-top' %}
  {% endif %}
  
  {% if section.settings.border-bottom %}
    {% assign border_bottom = 'halo-section-border-bottom' %}
  {% endif %}

  {% assign top = top | default: section.settings.top %}
  {% assign bottom = bottom | default: section.settings.bottom %}

  <div class="product-why-choose-us halo-section padding-top-{{ top }} padding-bottom-{{ bottom }} {{ border_top }} {{ border_bottom }}" {% if section.settings.background-color != blank %}style="background-color: {{ section.settings.background-color }}"{% endif %}>
    {% if section.settings.title != blank %}
      <div class="section-header text-center"  data-aos="fade-up" data-aos-duration="1000">
        <h2 class="title">{{ section.settings.title }}</h2>
        {% if section.settings.description != blank %}
          <p>{{ section.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}
    <div class="container">
      <div class="halo-row column-3 text-center">
        {% for block in section.blocks %}
          <div class="halo-row__item"  data-aos="fade-up" data-aos-duration="1000">
            {% if block.settings.image != blank %} 
              <img class="lazyload"
                data-src="{{ block.settings.image | img_url: 'master' }}"
                alt="" data-image>
              <h2 class="title">{{ block.settings.title }}</h2>
              {% if block.settings.description != blank %}
                <p>{{ block.settings.description }}</p>
              {% endif %}
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Why choose us",
  "max_blocks": 3,
  "settings": [
    {
      "type": "header",
      "content": "Section Layout"
    },
    {
      "type": "color",
      "id": "background-color",
      "label": "Background color"
    },
    {
      "type": "checkbox",
      "id": "enable_layout",
      "label": "Enable Layout",
      "default": true,
      "info": "Dynamic recommendations change and improve with time. [Learn more](https://help.shopify.com/en/themes/development/recommended-products)"
    },
    {
      "type": "checkbox",
      "id": "border-top",
      "label": "show border top",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "border-bottom",
      "label": "show border bottom",
      "default": false
    },
    {
      "type": "range",
      "id": "top",
      "label": "Spacing Top",
      "default": 60,
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "bottom",
      "label": "Spacing bottom",
      "default": 60,
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Heading Section"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Why choose us"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Description"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Why choose us",
      "blocks": [
        {
          "type": "item"
        },
        {
          "type": "item"
        },
        {
          "type": "item"
        }
      ]
    }
  ]
}
{% endschema %}