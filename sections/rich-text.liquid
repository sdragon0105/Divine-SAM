{% if section.settings.background-color %}
    {% assign background_color = 'halo-section-background-gray' %}
{% endif %}

{% if section.settings.border-top %}
    {% assign border_top = 'halo-section-border-top' %}
{% endif %}

{% if section.settings.border-bottom %}
    {% assign border_bottom = 'halo-section-border-bottom' %}
{% endif %}

{% assign top_content = top_content | default: section.settings.top_content %}
{% assign top = top | default: section.settings.top %}
{% assign bottom = bottom | default: section.settings.bottom %}

{% if section.settings.custom_color %}
<style>
    [data-section-id='{{ section.id }}'] .rich-text__heading {
        color: {{ section.settings.color_heading }}
    }

    [data-section-id='{{ section.id }}'] .rich-text__text {
        color: {{ section.settings.color_text }}
    }
</style>
{% endif %}

<div class="halo-section padding-top-{{ top }} padding-bottom-{{ bottom }} {{ background_color }} {{ border_top }} {{ border_bottom }}" data-section-id="{{ section.id }}" data-section-type="rich-text">
    <div class="container">
        <div class="rich-text {% if section.settings.full_width %}rich-text-full{% endif %}" >
            {% if section.settings.section_title != blank %}
                <div class="rich-text__heading rich-text__heading--{{ section.settings.title_size }} {{ section.settings.text_align }}" data-aos="fade-up">
                    <h2 class="title">{{ section.settings.section_title}}</h2>
                </div>
            {% endif %}
            {% if section.settings.text != blank %}
                <div class="padding-top-{{ top_content }} rich-text__text rich-text__text--{{ section.settings.text_size }} {{ section.settings.text_align }}" data-aos="fade-up">
                    {{ section.settings.text }}
                </div>
            {% endif %}
        </div>
    </div>
</div>


