<div id="{{section.id}}" class="shopify-section">
  <div class="container">
  <div class="product-zeus-bg">
  <h1>{{section.settings.title}}</h1>
  
    
    <div class="zeus-image-button">    
 {% for block in section.blocks %}
  <div class="zeus-box-block-content">
 <img src="{{block.settings.image |img_url:''}}">
    <p>{{block.settings.content}}</p>
     <a href="{{block.settings.url}}">{{block.settings.btn-title}}</a>
  </div>{%endfor%}
    </div>
    </div> 
</div>
</div>
