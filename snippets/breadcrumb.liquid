{% if settings.enable_breadcrumb %}
    <div class="breadcrumb-wrapper text-center{% if breadcrumb_top %} border-bottoms{% else %} border-tops{% endif %}">
        <ul class="breadcrumb">
            <li class="breadcrumb__item">
                <a href="/" aria-label="home">{{ 'homepage.general.title' | t }}</a>
                <svg class="icon"><use xlink:href="#icon-chevron-right" /></svg>
            </li>
            {% if template contains 'product' %} 
                {% if collection %}
                    {% capture url %}/collections/{{ collection.handle }}{% endcapture %}
                    <li class="breadcrumb__item">
                        <a href="{{ url }}" aria-label="link">{{ collection.title }}</a>
                        <svg class="icon"><use xlink:href="#icon-chevron-right" /></svg>
                    </li>
                {% endif %}
                <li class="breadcrumb__item">
                    <span>{{ product.title }}</span>
                </li>
            {% elsif template == 'article' %}
                <li class="breadcrumb__item">
                    <a href="{{ blog.url }}" aria-label="link">{{ blog.title }}</a>
                    <svg class="icon"><use xlink:href="#icon-chevron-right" /></svg>
                </li>
                <li class="breadcrumb__item">
                    <span>{{ article.title }}</span>
                </li>
            {% else %}
                <li class="breadcrumb__item">
                    <span>{{ page_title }}</span>
                </li>
            {% endif %}
        </ul>
    </div>
{% endif %}
