<div class="variants-list">
{% unless product.has_only_default_variant %}
    {% for option in product.options_with_values %}
        {% assign option_name = option.name | downcase %}
        {% assign option_color_swatch = settings.option_color_swatch | downcase %}
        {% if settings.option_swatch %}
            {% if option_color_swatch contains option_name %}
                <div class="selector-wrapper selector-wrapper-{{forloop.index}} swatch js product-form__item" data-option-index={{forloop.index}}>
                    <label class="form-label {% if option.name == 'default' %}label--hidden{% endif %}">
                        Choose {{ option.name }}: <span class="label-value-{{ forloop.index }}">{{ option.selected_value }}</span>
                    </label>
                    {% assign option_index0 = forloop.index0 %}
                    {% assign option_index = forloop.index %}
                    {% assign values = '' %}
                    {% for variant in product.variants %}
                        {% assign value = variant.options[option_index0] %}
                        {% unless values contains value %}
                            {% assign values = values | join: ';' %}
                            {% assign values = values | append: ';' | append: value %}
                            {% assign values = values | split: ';' %}
                            {% assign value_2 = value | remove: " " | downcase %}
                            <div class="swatch-element color {{ value_2 }}{% if variant.available %} available{% else %} soldout{% endif %}" data-value="{{ value }}">
                                <input {% unless variant.available %}disabled{% endunless %} class="single-option-selector single-option-selector-{{ section.id }}" type="radio" name="SingleOptionSelector-{{ option_index0 }}" data-index="option{{ option_index }}" value="{{ value | escape }}" {% if option.selected_value == value %} checked="checked"{% endif %} id="SingleOptionSelector{{ option_index0 }}-{{ value }}"{% if changeImageGroup %} data-filter=".filter-{{ value | handle }}"{% endif %}>
                                <label data-toggle="tooltip" data-placement="top" title="{{ value }}" for="SingleOptionSelector{{ option_index0 }}-{{ value }}" {% if variant.image != blank %} data-image="{{ variant.image.src | product_img_url: 'compact' | split: '?' | first }}" style="background-image: url({{ variant.image.src | product_img_url: 'compact' }})"{% else %} style="background-color: {{ value_2 }}; background-image: url({{ value_2 | handle | append: '.png' | file_url }})"{% endif %}>{{ value }}</label>
                            </div>
                        {% endunless %}
                    {% endfor %}
                </div>
            {% else %}
                <div class="selector-wrapper selector-wrapper-{{forloop.index}} swatch js product-form__item" data-option-index={{forloop.index}}>
                    <label class="form-label {% if option.name == 'default' %}label--hidden{% endif %}">
                        Choose {{ option.name }}: <span class="label-value-{{ forloop.index }}">{{ option.selected_value }}</span>
                    </label>
                    {% assign option_index0 = forloop.index0 %}
                    {% assign option_index = forloop.index %}
                    {% assign values = '' %}

                    {% for variant in product.variants %}
                        {% assign value = variant.options[option_index0] %}
                        {% unless values contains value %}
                            {% assign values = values | join: ';' %}
                            {% assign values = values | append: ';' | append: value %}
                            {% assign values = values | split: ';' %}
                            {% assign value_2 = value | remove: " " | downcase %}
                            <div class="swatch-element size {{ value_2 }}{% if variant.available %} available{% else %} soldout{% endif %}" data-value="{{ value }}">
                                <input {% unless variant.available %}disabled{% endunless %} class="single-option-selector single-option-selector-{{ section.id }}" type="radio" name="SingleOptionSelector-{{ option_index0 }}" data-index="option{{ option_index }}" value="{{ value | escape }}" {% if option.selected_value == value %} checked="checked"{% endif %} id="SingleOptionSelector{{ option_index0 }}-{{ value }}">
                                <label data-toggle="tooltip" data-placement="top" title="{{ value }}" for="SingleOptionSelector{{ option_index0 }}-{{ value }}">{{ value }}</label>
                            </div>
                        {% endunless %}
                    {% endfor %}
                </div>
            {% endif %}
        {% else %}
            <div class="selector-wrapper selector-wrapper-{{forloop.index}} selector js product-form__item{% if option_color_swatch contains option_name %} color{% endif %}" data-option-index={{forloop.index}}>
                <label for="SingleOptionSelector-{{ forloop.index0 }}" class="form-label {% if option.name == 'default' %}label--hidden{% endif %}">
                   Choose {{ option.name }}: <span class="label-value-{{ forloop.index }}"{% if option_color_swatch contains option_name %}{% if changeImageGroup %} data-filter=".filter-{{ option.selected_value | handle }}"{% endif %}{% endif %}>{{ option.selected_value }}</span>
                </label>
                <select class="single-option-selector single-option-selector-{{ section.id }} product-form__input form-control" id="SingleOptionSelector-{{ forloop.index0 }}" data-index="option{{ forloop.index }}">
                    {% assign option_index0 = forloop.index0 %}
                    {% assign option_index = forloop.index %}
                    {% assign values = '' %}
                    
                    {% for variant in product.variants %}
                        {% assign value = variant.options[option_index0] %}
                        {% unless values contains value %}
                            {% assign values = values | join: ';' %}
                            {% assign values = values | append: ';' | append: value %}
                            {% assign values = values | split: ';' %}
                            {% if variant.available %}
                                <option value="{{ value }}" {% if variant.image != blank %} data-image="{{ variant.image.src | product_img_url: 'compact' | split: '?' | first }}"{% endif %}{% if option.selected_value == value %} selected="selected"{% endif %}>{{ value }}</option>
                            {% else %}
                                <option value="{{ value }}" {% if variant.image != blank %} data-image="{{ variant.image.src | product_img_url: 'compact' | split: '?' | first }}"{% endif %} disabled="disabled">{{ value }}</option>
                            {% endif %}
                        {% endunless %}
                    {% endfor %}
                </select>
            </div>
        {% endif %}
    {% endfor %}
{% endunless %}
</div>
<select name="id" id="ProductSelect-{{ section.id }}" class="product-form__variants no-js">
    {% for variant in product.variants %}
        {% if variant.available %}
            <option {% if variant == product.selected_or_first_available_variant %} selected="selected" {% endif %} value="{{ variant.id }}">
                {{ variant.title }}
            </option>
        {% else %}
            <option disabled="disabled">{{ variant.title }} - {{ 'products.product.sold_out' | t }}</option>
        {% endif %}
    {% endfor %}
</select>