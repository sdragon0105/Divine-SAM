{% if settings.breadcrumb_layout == 'top' %}
    {% render 'breadcrumb', breadcrumb_top: true %}
{% endif %}
<div class="page page-productDetail">
    <div class="container123">
        {% section 'product-template-apollo' %}

      {% comment %}
        <div class="product-tab-container">
            <div class="product-tab__item">
                {% section 'product-tab-horizontal' %}
            </div>
            <div class="product-tab__item">
                {% section 'product-add-more' %}
            </div>
        </div>
      {% endcomment %}
    </div>

    {% section 'product-how-it-works' %}
  
  	{% section 'beauty-framed-apollo' %}
	{% section 'main-features-apollo' %}
    
  	  {% section 'image-with-text-apollo' %}
      
    {% section 'what-box' %}
  	{% section 'product-collection' %}
  	{% section 'faq-product' %}
  	{% section 'product-gallery' %}
    {% section 'product-why-choose-us' %}

  	<div class="container">
        {% section 'product-recommendations' %}

        {% section 'recently-viewed-products' %}
    </div>
  
    <div class="container">
        <div id="looxReviews" data-product-id="{{ product.id }}" class="loox-reviews-default"></div>
    </div>
</div>
{% if settings.enable_ask_an_expert %}
    {% render 'ask-an-expert-popup' %}
{% endif %}

{% if settings.breadcrumb_layout == 'bottom' %}
    {% render 'breadcrumb' %}
{% endif %}